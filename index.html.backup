            <p class="game-over-reason" id="gameOverReason"></p>
            
            <table class="final-leaderboard">
                <thead>
                    <tr>
                        <th>Posición</th>
                        <th>Jugador</th>
                        <th>Puntuación Final</th>
                    </tr>
                </thead>
                <tbody id="finalLeaderboardBody">
                </tbody>
            </table>
            
            <button class="close-modal" onclick="closeFinalLeaderboard()">Cerrar</button>
        </div>
    </div>
