            // Contar tipos de fichas
            const tiles = round.rack.split('');
            const vowels = tiles.filter(t => 'AEIOU'.includes(t)).length;
            const consonants = tiles.filter(t => t !== '?' && !'AEIOU'.includes(t)).length;
            const blanks = tiles.filter(t => t === '?').length;
            
            let html = `
